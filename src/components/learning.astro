---
import LearningCard from "./sub-components/learning-card.astro";
import tensorflowLogo from "../portfolio_images/Tensorflow-logo.png";
import flutterlLogo from "../portfolio_images/flutter-logo.png";
import reactlLogo from "../portfolio_images/react-logo.png";
import unitylLogo from "../portfolio_images/unity-logo.png";
---

<div id="learning">
  <h2>Stuff I Learned over The <span>Years</span></h2>
  <div id="learning-cards">
    <LearningCard
      url="https://www.tensorflow.org/"
      cardState="green"
      image={tensorflowLogo}
      title="Tensorflow"
      desciption="TensorFlow is a free and open-source software library for machine learning and artificial intelligence"
    />
    <LearningCard
      url="https://reactjs.org/"
      cardState="red"
      image={reactlLogo}
      title="React"
      desciption="React is a open-source front-end JavaScript library for building UI based on components."
    />
    <LearningCard
      url="https://unity.com/"
      cardState="red"
      image={unitylLogo}
      title="Unity"
      desciption="Unity is a cross-platform game engine developed by Unity Technologies."
    />
    <LearningCard
      url="https://flutter.dev/community"
      cardState="green"
      image={flutterlLogo}
      title="Flutter"
      desciption="Flutter is an open-source UI software development kit created by Google. It is used to develop cross-platform applications."
    />
  </div>
</div>
