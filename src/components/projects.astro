---
import metropolis_image from "../portfolio_images/metropolis-logo.png";
import pastelPayment_image from "../portfolio_images/pastel-payment-card.png";
import handWriting_image from "../portfolio_images/hand-writing.png";
import zombieDodge_image from "../portfolio_images/zombie-dodge.png";
---

<div id="project-container">
  <h2>Projects</h2>
  <div id="projects">
    <p class="project-name">
      <img
        class="project-image"
        src={metropolis_image}
        alt=""
      />
      <a
        href="https://github.com/DuanBoomer/metropolis"
        target="_blank"
        rel="noopener noreferrer"
        >Metropolis</a
      >
    </p>
    <p class="project-name">
      <img
        class="project-image"
        src={pastelPayment_image}
        alt=""
      />
      <a
        href="https://github.com/DuanBoomer/Pastel-Fintect-Page-Flutter"
        target="_blank"
        rel="noopener noreferrer"
        >Pastel Payment</a
      >
    </p>
    <p class="project-name">
      <img
        class="project-image"
        src={handWriting_image}
        alt=""
      />
      <a
        href="https://github.com/DuanBoomer"
        target="_blank"
        rel="noopener noreferrer"
        >Hand writing classification</a
      >
    </p>
    <p class="project-name">
      <img
        class="project-image"
        src={zombieDodge_image}
        alt=""
      />
      <a
        href="https://github.com/DuanBoomer"
        target="_blank"
        rel="noopener noreferrer"
        >Zombie Dodge</a
      >
    </p>
  </div>
</div>

<style>
  /* \\\\\\\\\\\\\\\ */

  .project-image {
    position: fixed;
    width: 16rem;
    display: none;
    transition: 0.1s;
  }

  /* \\\\\\\\\\\\\\\\\\\\ */
  h2 {
    font-weight: 800;
    font-size: 2rem;
    transition: 250ms;
    width: fit-content;
    margin: 0;
    /* color: var(--accent-color); */
  }
  p {
    margin: 1rem 0;
    font-weight: 800;
    font-size: 2.5rem;
    width: fit-content;
    transition: 250ms;
    color: var(--complementary-color);
  }

  #project-container {
    padding: 4rem 2rem;
  }

  @media (min-width: 768px) {
    p {
      font-size: 3rem;
    }
  }

  @media (min-width: 1024px) {
    h2 {
      font-size: 3rem;
    }

    /* h2:hover {
      text-decoration-line: none;
      color: var(--black);
    } */

    p {
      font-size: 4rem;
      /* color: black; */
    }

    p:hover {
      color: var(--dominant-color);
    }

    p:hover > .project-image {
      display: block;
    }
  }
</style>

<script>
  const images = document.getElementsByClassName("project-image");

  function addMouseEffects(elements) {
    for (let i = 0; i < elements.length; i++) {
      const tag = elements.item(i);

      document.addEventListener("mousemove", (systemCursor) => {
        var x = systemCursor.clientX;
        var y = systemCursor.clientY;

        tag.style.left = x + "px";
        tag.style.top = y + "px";
      });
    }
  }

  addMouseEffects(images);
</script>
